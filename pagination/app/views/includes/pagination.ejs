<nav>
    <ul class="pagination justify-content-center">
        <% if (currentPage !== 1 && previousPage !== 1) { %>
            <li class="page-item">
                <a class="page-link" href="?page=1">1</a>
            </li>
        <% } %>
        <% if (showPreviousPage) { %>
            <li class="page-item">
                <a class="page-link" href="?page=<%= previousPage %>">
                    <%= previousPage %>
                </a>
            </li>
        <% } %>
        <li class="page-item active">
            <a class="page-link" href="?page=<%= currentPage %>">
                <%= currentPage %>
            </a>
        </li>
        <% if (showNextPage) { %>
            <li class="page-item">
                <a class="page-link active" href="?page=<%= nextPage %>">
                    <%= nextPage %>
                </a>
            </li>
        <% } %>
        <% if (nextPage !== lastPage && lastPage !== currentPage) { %>
            <li class="page-item">
                <a class="page-link active" href="?page=<%= lastPage %>">
                    <%= lastPage %>
                </a>
            </li>
        <% } %>
    </ul>
</nav>
