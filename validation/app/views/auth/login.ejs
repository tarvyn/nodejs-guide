<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/login.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <div class="container">
            <h1>Login</h1>
            <form action="/login" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input id="email" type="email" name="email" class="form-control" placeholder="name@example.com"
                            value="<%= oldInput && oldInput.email %>">
                    <% if (validationErrors.email) { %>
                        <div class="invalid-feedback d-block">
                            <%= validationErrors.email.msg %>
                        </div>
                    <% } %>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input id="password" name="password" type="password" class="form-control"  placeholder="Password"
                            value="<%= oldInput && oldInput.password %>">
                    <% if (validationErrors.password) { %>
                        <div class="invalid-feedback d-block">
                            <%= validationErrors.password.msg %>
                        </div>
                    <% } %>
                </div>
                <div class="form-group">
                    <a href="/reset-password">Reset Password</a>
                </div>
                <button type="submit" class="btn btn-primary ml-auto">Login</button>
            </form>
        </div>
    </main>
<%- include('../includes/end.ejs') %>
